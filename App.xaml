<Application x:Class="_2742117_2730729_2744585_2742117_UA1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_2742117_2730729_2744585_2742117_UA1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Template pour définir la bordure et les événements (click et survol)-->
        <ControlTemplate x:Key="TemplateDeBase" TargetType="Button">
            <Border x:Name="border"
      Background="{TemplateBinding Background}" 
      BorderBrush="{TemplateBinding BorderBrush}" 
      BorderThickness="{TemplateBinding BorderThickness}" 
      CornerRadius="25" 
                                                       
>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border  >

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Uid}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Style de base pour définir les propriétés communes à tous les boutons-->
        <Style TargetType="Button" x:Key="StyleDeBase">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Template"
 Value="{StaticResource TemplateDeBase}"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            

        </Style>

        <!-- Style du Groupe 1 (chiffres, point, e, π, +/-) -->
        <Style TargetType="Button" x:Key="StyleSymboles" BasedOn="{StaticResource StyleDeBase}">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Tag" Value="#4A4A4A"/>
            <!-- Couleur au survol -->
            <Setter Property="Uid" Value="#1C1C1C"/>
            <!-- Couleur au clic -->
        </Style>

        <!-- Style du Groupe 2 (opérateurs +, -, ×, ÷, =) -->
        <Style TargetType="Button" x:Key="StyleOperateurs" BasedOn="{StaticResource StyleDeBase}">
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="Tag" Value="#FFA733"/>
            <!-- Couleur au survol -->
            <Setter Property="Uid" Value="#CC7A00"/>
            <!-- Couleur au clic -->
        </Style>

        <!-- Style du Groupe 3 (fonctions trigonométriques, CE, C, Back) -->
        <Style TargetType="Button" x:Key="StyleFonctions" BasedOn="{StaticResource StyleDeBase}">
            <Setter Property="Background" Value="#D4D4D2"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Tag" Value="#E5E5E2"/>
            <!-- Couleur au survol -->
            <Setter Property="Uid" Value="#D4D4D2"/>
            <!-- Couleur au clic -->
        </Style>

        <!-- Style spécial pour le bouton +/- -->
        <Style TargetType="Button" x:Key="StylePlusMinus" BasedOn="{StaticResource StyleSymboles}">
            <Setter Property="Height" Value="100"/>
                   <Setter Property="Width" Value="50"/>
        </Style>
        
        <!-- Style spécial pour le bouton = -->
        <Style TargetType="Button" x:Key="StyleEgale" BasedOn="{StaticResource StyleOperateurs}">
            <Setter Property="Height" Value="50"/>
                   <Setter Property="Width" Value="100"/>
           
        </Style>

    </Application.Resources>
</Application>