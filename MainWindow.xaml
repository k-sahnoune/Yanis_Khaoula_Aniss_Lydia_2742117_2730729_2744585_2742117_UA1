<Window x:Class="_2742117_2730729_2744585_2742117_UA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2742117_2730729_2744585_2742117_UA1"
        mc:Ignorable="d"    
        Title="2742117_2730729_2744585_2742117_UA1" 
        Height="500" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#000000">

    <Border Background="#000000">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Affichage du résultat -->
            <TextBlock x:Name="txtResult" Text="0" Grid.Row="0" Grid.ColumnSpan="5" 
                      HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                      Foreground="#FFFFFF" FontSize="36" FontWeight="Bold"
                      Margin="0,0,10,10"
                       TextTrimming="CharacterEllipsis"/>

           
                

                    <!-- Affichage de l'opération -->
            <TextBlock x:Name="txtOperation" Text="" Grid.Row="1" Grid.ColumnSpan="5" 
                      HorizontalAlignment="Right" VerticalAlignment="Center" 
                      Foreground="#AAAAAA" FontSize="16" Margin="0,0,10,0"/>

            <!-- Ligne 1: Fonctions trigonométriques -->
            <Button Content="Sin" Grid.Row="2" Grid.Column="0" Style="{StaticResource StyleFonctions}" Click="FunctionButton_Click"/>
            <Button Content="Cos" Grid.Row="2" Grid.Column="1" Style="{StaticResource StyleFonctions}" Click="FunctionButton_Click"/>
            <Button Content="Tan" Grid.Row="2" Grid.Column="2" Style="{StaticResource StyleFonctions}" Click="FunctionButton_Click"/>
            <Button Content="CE" Grid.Row="2" Grid.Column="3" Style="{StaticResource StyleFonctions}" Click="CEButton_Click"/>
            <Button Content="C" Grid.Row="2" Grid.Column="4" Style="{StaticResource StyleFonctions}" Click="CButton_Click"/>

            <!-- Ligne 2: Fonctions inverses -->
            <Button Content="Arcsin" Grid.Row="3" Grid.Column="0" Style="{StaticResource StyleFonctions}" Click="FunctionButton_Click"/>
            <Button Content="Arccos" Grid.Row="3" Grid.Column="1" Style="{StaticResource StyleFonctions}" Click="FunctionButton_Click"/>
            <Button Content="Arctan" Grid.Row="3" Grid.Column="2" Style="{StaticResource StyleFonctions}" Click="FunctionButton_Click"/>
            <Button Content="Back" Grid.Row="3" Grid.Column="3" Style="{StaticResource StyleFonctions}" Click="BackButton_Click"/>
            
            <!-- Ligne 3: π et chiffres 7,8,9 -->
            <Button Content="π" Grid.Row="4" Grid.Column="0" Style="{StaticResource StyleSymboles}" Click="ConstantButton_Click"/>
            <Button Content="7" Grid.Row="4" Grid.Column="1" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="8" Grid.Row="4" Grid.Column="2" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="9" Grid.Row="4" Grid.Column="3" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="×" Grid.Row="4" Grid.Column="4" Style="{StaticResource StyleOperateurs}" Click="OperatorButton_Click"/>

            <!-- Ligne 4: e et chiffres 4,5,6 -->
            <Button Content="e" Grid.Row="5" Grid.Column="0" Style="{StaticResource StyleSymboles}" Click="ConstantButton_Click"/>
            <Button Content="4" Grid.Row="5" Grid.Column="1" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="5" Grid.Row="5" Grid.Column="2" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="6" Grid.Row="5" Grid.Column="3" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="÷" Grid.Row="3" Grid.Column="4" Style="{StaticResource StyleOperateurs}" Click="OperatorButton_Click"/>

            <!-- Ligne 5: +/- et chiffres 1,2,3 -->
            <Button Content="+/-" Grid.Row="6" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource StylePlusMinus}" Click="PlusMinusButton_Click"/>
            <Button Content="1" Grid.Row="6" Grid.Column="1" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="2" Grid.Row="6" Grid.Column="2" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="3" Grid.Row="6" Grid.Column="3" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="-" Grid.Row="6" Grid.Column="4" Style="{StaticResource StyleOperateurs}" Click="OperatorButton_Click"/>

            <!-- Ligne 6: 0, point décimal et égal -->
            <Button Content="0" Grid.Row="7" Grid.Column="1" Style="{StaticResource StyleSymboles}" Click="NumberButton_Click"/>
            <Button Content="." Grid.Row="7" Grid.Column="2" Style="{StaticResource StyleSymboles}" Click="DecimalButton_Click"/>
            <Button Content="+" Grid.Row="5" Grid.Column="4" Style="{StaticResource StyleOperateurs }" Click="OperatorButton_Click"/>
            <Button Content="=" Grid.Row="7" Grid.Column="3" Style="{StaticResource  StyleEgale}" Click="EqualsButton_Click"
              Grid.ColumnSpan="2"/>

        </Grid>
    </Border>
</Window>